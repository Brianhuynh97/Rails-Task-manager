<div class="content-div">

  <h1>Tasks</h1>

  <% @tasks.each do |task| %>

    <div class="tasks-flex">

      <% if task.completed %>
        <p> <i class="fa fa-check-square-o" aria-hidden="true"></i> </p>
      <% else %>
        <p> <i class="far fa-square"></i> </p>
      <% end %>

      <p><%= link_to task.title, task_path(task) %> - <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task? "} %></p>

    </div>
  <% end %>

</div>

<div class="link-div">
  <p>
    <%= link_to "+ Add new task", new_path %>
  </p>
</div>

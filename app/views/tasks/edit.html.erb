<div class="content-div">
  <h1>Edit tasks</h1>

  <%= form_for(@task) do |f| %>
    <div>
      <%= f.label :title, "Enter name" %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :details, "Enter details" %>
      <%= f.text_field :details %>
    </div>

    <div>
      Check if it has been completed
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>

    <div>
      <%= f.submit %>
    </div>

  <% end %>

</div>

<div class="link-div">
  <p> <i class="fa fa-refresh" aria-hidden="true"></i> <%= link_to "Back to list", tasks_path %></p>
</div>
